<article class="shop-card" id="<%= dom_id item %>" 
         data-categories="<%= item.category_ids %>"
         data-available="<%= item.is_available? %>">
  <% if Current.user.is_admin? %>
    <% if item.draft %>
      <span class="tag pinned-tl pico-background-orange-300">
        Draft
      </span>
    <% else %>
      <span class="tag pinned-tl pico-background-jade-300">
        Active
      </span>
    <% end %>
  <% end  %>
  <header>
    <%= link_to item, data: {turbo_frame: 'item-details'} do %>
      <%= image_tag item.cover_image, {class: "cover", size: "756x640"} %>
    <% end %>
  </header>
  <div class="flex-between">
    <h3>
      <%= link_to item.title, item, data: {turbo_frame: 'item-details'}, class: "contrast" %>
    </h3>
    <% if item.is_available? %>
      <span class="tag pico-background-jade-300">Available</span>
    <% else %>
      <span class="tag pico-background-grey-300">Unavailable</span>
    <% end %>
  </div>
</article>
