<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Edit Account Info</h1>
  <%= form_with model: @user, url: registrations_url, class: "contents" do |form| %>
    <div class="my-5">
      <%= form.text_field :display_name, 
          autofocus: true, 
          placeholder: "Choose a username", 
          class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.email_field :email_address,
          autocomplete: "username",
          placeholder: "Enter your email address",
          class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.password_field :password,
          autocomplete: "current-password",
          placeholder: "New password (Leave blank to keep current)",
          maxlength: 72,
          class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.password_field :password_confirmation,
          autocomplete: "current-password",
          placeholder: "Confirm new password",
          maxlength: 72,
          class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
      <div class="inline">
        <%= form.submit "Save Changes",
            class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>