<p style="color: green"><%= notice %></p>

<% content_for :title, "Categories" %>

<div class="flex-left mb">
  <h1>Categories</h1>
  <% if Current.user.is_admin? %>
    <%= link_to "Create New", new_category_path %>
  <% end %>
</div>

<div id="categories">
  <% @categories.each do |category| %>
    <article>
      <%= render category %>
      <p class="tight">
        <%= link_to "Show this category", category %>
      </p>
    </article>
  <% end %>
</div>
