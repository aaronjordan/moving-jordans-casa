<% content_for :title, "Categories" %>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <article>
      <%= render category %>
      <p class="tight">
        <%= link_to "Show this category", category %>
      </p>
    </article>
  <% end %>
</div>

